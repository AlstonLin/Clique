<%= form_tag search_path, :method => :get, :class => "form-group" do %>
  <%= text_field_tag :query, params[:query], :placeholder => "Search", :class => "form-control", :data => {:action => "grow"} %>
  <%= radio_button_tag :resource, "users", params[:resource] == nil || params[:resource] == 'users' %>
  <%= label_tag :resource, "Artists" %>
  <%= radio_button_tag :resource, "tracks", params[:resource] == 'tracks' %>
  <%= label_tag :resource, "Tracks" %>
<% end %>
