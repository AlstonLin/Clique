              <li><%= link_to "Profile", current_user, :class => 'menu-item' %></li>
              <li><%= link_to "Edit Profile", edit_profile_path, :class => 'menu-item' %></li>
              <div class="cdivider"></div>
              <li><%= link_to "Settings", settings_path, :class => 'menu-item' %></li>
