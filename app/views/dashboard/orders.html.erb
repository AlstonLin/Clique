<div class="dashboard">
  <div class="container">
    <div class="row">
      <%= render :partial => "side_bar", :locals => { :partial => "orders" } %>
      <div class="col-sm-9 content">
        <div class="dashhead">
          <div class="dashhead-titles">
            <h6 class="dashhead-subtitle">Dashboards</h6>
            <h2 class="dashhead-title">Payments</h2>
          </div>
        </div>

        <div class="table-full">
          <div class="table-responsive">
            <table class="table" data-sort="table">
              <thead>
                <tr>
                  <th>Payment ID</th>
                  <th>Description</th>
                  <th>Date</th>
                  <th>Amount</th>
                </tr>
              </thead>
              <tbody>
                <% @charges.each do |c|%>
                  <tr>
                    <td><%= c.id %></td>
                    <td><%= c.statement_descriptor %></td>
                    <td><%= Time.at(c.created).strftime("%m/%d/%Y")  %></td>
                    <td>$<%= c.amount / 100 %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
