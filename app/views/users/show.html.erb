<!-- Header -->
<div class="topBanner">
  <div class="profile-Banner">
    <div class="banner-Overlay"></div>
    <img src="<%= @user.cover_picture_url %>">
  </div>
  <div class="user-picture">
    <img src="<%= @user.profile_picture_url %>">
  </div>
  <div class="profile-pagename">
    <%= @user.first_name %>
    <%= @user.last_name %>
  </div>
  <div class="profile-Bio">
    <%= @user.bio %>
  </div>
</div>

<!-- Stats Bar + Profile Picture + Artist Names -->
<div class="statsBar">
  <div class="container">
  <!-- Buttons -->
    <div id="buttons">
      <%= render :partial => "buttons", :locals => { user: @user } %>
    </div>
  </div>
</div>

<div class="profile-bottom">
  <div class="container">
    <div class="col-md-6">
      <ul class="list-group media-list media-list-stream">
        <!-- Post Form if own profile -->
        <% if @user == current_user %>
          <li class="media list-group-item p-a post-height">
              <%= render :partial => "post_form" %>
          </li>
        <% end %>
        <div id="container">
          <%= render :partial => '/users/tabs/all' %>
        </div>
      </ul>
    </div>
        <!-- Right Column -->
    <div class="col-md-3">
      <%= render :partial => "profile_right", :locals => { user: @user } %>
    </div>
  </div>
</div>
