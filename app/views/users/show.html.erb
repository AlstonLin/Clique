<!-- Header -->
<div class="topBanner">
  <div class="profile-Banner">
    <div class="banner-Overlay"></div>
    <img src="<%= @user.cover_picture_url %>">
  </div>
  <div class="user-picture">
    <img src="<%= @user.profile_picture_url %>">
  </div>
  <div class="profile-pagename">
    <%= @user.first_name %>
    <%= @user.last_name %>
  </div>
  <div class="profile-Bio">
    <%= @user.bio %>
  </div>
</div>

<!-- Stats Bar + Profile Picture + Artist Names -->
<div class="statsBar">
  <div class="container">
  <!-- Buttons -->
    <div id="buttons">
      <%= render :partial => "/users/partials/buttons", :locals => { user: @user } %>
    </div>
  </div>
</div>

<div class="profile-bottom">

  <div class="container">
    <div class="col-md-6">
      <ul class="list-group media-list media-list-stream">
        <!-- Post Form if own profile -->
        <% if @user == current_user %>
          <li class="media list-group-item p-a post-height">
              <%= render :partial => "/users/partials/post_form" %>
          </li>
        <% end %>

        <!-- Left Column -->
        <%= render :partial => '/users/partials/' + @partial %>
      </ul>
    </div>
    <!-- Right Column -->
    <% if @show_right %>
      <div class="col-md-3">
        <%= render :partial => "/users/partials/profile_right", :locals => { user: @user } %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script>
  Stripe.setPublishableKey("<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>");
</script>
