<!-- Content Filters -->
<div class="stats1 stats-active">
<%= link_to "All", user_all_path(user), :method => :get, :remote => true %>
</div>
<div class="stats2">
<%= link_to "Posts", user_posts_path(user), :method => :get, :remote => true %>
</div>
<div class="stats2">
<%= link_to "Tracks", user_songs_path(user), :method => :get, :remote => true %>
</div>
<%# button_to "Reposts", user_reposts_path(user), :method => :get, :remote => true %>
<!-- Own profile -->
<% if @user == current_user %>
  <% if @user.clique %>
    <div class="stats2">
      <%= link_to "Clique", user_clique_path(user), :method => :get, :remote => true %>
    </div>
  <% end %>
  <div class="stats2">
  <%= link_to "Followers", user_followers_path(user), :method => :get, :remote => true %>
  </div>

  <div class="stats2">
  <%= link_to "Following", user_following_path(user), :method => :get, :remote => true %>
  </div>

  <div class="edit-Profile">
    <%= button_to "Edit Profile", edit_profile_path, :method => :get, :class => "button btn btn-info btn-lg btn-primary btn"  %>
  </div>
<% elsif current_user %>
<!-- Others profile -->
  <!-- Follow -->
  <% if is_following @user %>
    <%= button_to "Unfollow", user_follow_path(user), :remote => true, :class => "btn-hollow btn"  %>
  <% else %>
    <%= button_to "Follow", user_follow_path(user), :remote => true, :class => "btn-hollow btn"  %>
  <% end %>

  <% if is_following current_user, @user %>
    <%= button_to "Message", user_message_path(user), :method => :get, :remote => true, :class => "btn-hollow btn"  %>
  <% end %>
  <!-- Clique-->
  <% if @user.clique %>
    <% if current_user.cliques.include? user.clique %>
      <div class="stats2">
          <%= link_to "Clique", user_clique_path(user), :method => :get, :remote => true %>
      </div>
    <% end %>
  <% end %>
<% end %>
