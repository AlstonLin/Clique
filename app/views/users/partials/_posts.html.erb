<!-- Left Column  -->
<div class="leftCol">
<!-- Post Form if own profile -->
  <% if @user == current_user %>
    <div class="post-Box">
      <%= render :partial => "/users/partials/post_form" %>
    </div>
  <% end %>
  <!-- Content -->
  <div id="content">
    <% if @posts.count == 0 %>
      <div class="no-post">
      <div class="no-post-img"></div>
        <% if @user == current_user %>
          You have no made any posts
        <% else %>
          <%= @user.first_name %> has not made any posts</br>
          <%= link_to "Explore Artists", explore_path, :class => "btn no-post-btn btn-primary secondary-background" %>
        <% end %>
      </div>
    <% end %>

    <% @posts.each do |p| %>
      <% if p.is_a? Post %>
        <%= render :partial => '/posts/post', :locals => { :post => p } %>
      <% else %>
        <%= render :partial => '/posts/repost', :locals => { :repost => p } %>
      <% end %>
    <% end %>
  </div>
</div>
<!-- Right Column -->
<div id="rightCol" class="rightCol">
  <%= render :partial => "/users/partials/profile_right", :locals => { user: @user } %>
</div>
