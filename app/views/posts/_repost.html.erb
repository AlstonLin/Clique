<div class="textpost-Box">
	<div class="text-Top">
		Reposted
		<div class="text-userPic">
			<img src="<%= post.poster.profile_picture_url %>">
		</div>
		<div class="text-profileName">
			<%= link_to post.poster.name, post.poster %>
		</div>
		<div class="text-Date">
			<%= time_ago_in_words post.created_at %>
		</div>
	</div>
	<div class="text-Middle">
		<div class="text-text">
			<%= post.content %>
		</div>
	</div>

	<div class="text-Bottom">
		<div class="player1-right-btn2">
			<% if current_user %>
				<% if post.poster == current_user %>
					<!-- Buttons to show owner -->
					<div class="player1-btn2">
						<%= button_to "Delete", post_delete_path(post), :remote => true, :data => {confirm: "Are you sure you want to delete this post?"} %>
					</div>
				<% elsif !post.clique_only %>
					<% if current_user.reposts.include? post %>
						<!-- Un-repost button -->
						<div class="player1-btn">
							<%= link_to "", post_repost_path(post), :remote => true, :class => "glyphicon glyphicon-refresh", :method => :post %>
						</div>
					<% else %>
						<!-- Repost button -->
						<div class="player1-btn">
							<%= link_to "", post_repost_path(post), :remote => true, :class => "glyphicon glyphicon-refresh", :method => :post %>
						</div>
					<% end %>
				<% end %>
				<div class="player1-btn">
					<% if post.favoriters.include? current_user %>
						<%= link_to "", post_favorite_path(post), :remote => true, :class => "glyphicon glyphicon-heart", :method => :post %>
					<% else %>
						<%= link_to "", post_favorite_path(post), :remote => true, :class => "glyphicon glyphicon-heart", :method => :post %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>
	<!-- Comments -->
	<div class="player1-btn">
		<a data-toggle="collapse" href="#comments<%= post.id %>">
			<span class="glyphicon glyphicon-comment" aria-hidden="true">
			</span>
		</a>
	</div>
	<div id="comments<%= post.id %>" class="panel-collapse collapse">
		<%= render :partial => 'posts/comments', :locals => { :post => post} %>
		<%= render :partial => 'posts/comment_form', :locals => { :post => post} %>
	</div>
</div>
