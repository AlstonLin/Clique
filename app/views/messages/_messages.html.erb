<% if @messages %>
  <%= form_for Message.new, :remote => true do |f| %>
    <%= hidden_field_tag :username, @other.username %><br>
    <%= f.text_area :content %>
    <%= f.submit "Send" %>
  <% end %>
  <% @messages.each do |m| %>
    <%= render :partial => "message", :locals => { :message => m }%>
  <% end %>
<% end %>
