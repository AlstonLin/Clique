<% if message.from == current_user %>
  <!-- Message from the User -->
  <h2>You</h2>
  <h3><%= message.content %></h3>
  <h6><i><%= time_ago_in_words message.created_at %></i></h6><br>
<% else %>
  <!-- Message from someone else -->
  <h2><%= message.from.name %></h2>
  <h3><%= message.content %></h3>
  <h6><i><%= time_ago_in_words message.created_at %></i></h6><br>
<% end %>
