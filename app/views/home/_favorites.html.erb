<div class="leftCol">
    <% if @favorites.count == 0 %>
    	<div class="no-post">
    		<div class="no-post-img"></div>
        No favorites to show</br>
        <%= link_to "Explore Artists", explore_path, :class => "btn no-post-btn btn-primary secondary-background" %>
       </div>
    <% else %>
      <% @favorites.each do |f| %>
          <% if f.is_a? Post %>
            <%= render :partial => '/posts/post', :locals => { :post => f } %>
          <% else %>
            <%= render :partial => '/tracks/track', :locals => { :track => f } %>
          <% end %>
      <% end %>
    <% end %>
</div>
