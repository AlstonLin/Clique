<!-- Top Artists -->
<div class="rightCol-Filter">
  <div class="rightCol-Filter-Title">
    <div class="rightCol-Filter-Title-Name">
     	Top Artists
    </div>
    <div class="rightCol-Filter-Title-Stat">
      <%= link_to "See more", explore_path %>
    </div>
  </div>
  <% @top.each do |t| %>
    <div class="rightCol-Filter-Profile">
      <%= link_to t do %>
        <div class="rightCol-Profile-Avi text-userPic2">
          <%= image_tag t.profile_picture_url %>
        </div>
        <div class="rightCol-Profile-Bar">
          <div class="rightCol-Profile-Name">
            <%= t.name %>
          </div>
          <div class="rightCol-Followers">
            <i class="fa fa-user-plus"></i>
            <%= t.followers.count %>
          </div>
        </div>
      <% end %>
      <% if current_user %>
        <%= link_to user_follow_path(t), :remote => true, :method => :post do %>

            <% if is_following t %>
              <div class="rightCol-Profile-Following">
                Following
              </div>
            <% else %>
              <div class="rightCol-Profile-Follow">
                Follow
              </div>
            <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Favorites -->
<% if @favorites.count > 0 %>
  <div class="rightCol-Filter">
    <div class="rightCol-Filter-Title">
      <div class="rightCol-Filter-Title-Name">
       	Favorites
      </div>

    <div class="rightCol-Filter-Title-Stat">
      <%= link_to "See more", favorites_path, :id=>"FavSeeMore",:method => :get, :remote => true %>
    </div>

    </div>
    <% @favorites.each do |f| %>
      <div class="rightCol-Filter-Profile">

          <div class="rightCol-Profile-Avi text-userPic2">
            <%= image_tag f.get_pic_url %>
          </div>


        <div class="rightCol-Profile-Bar">



        <!-- this should display the artist's name and link to their profile -->
        <%= link_to f.owner  do %>
          <div class="rightCol-Profile-Name">
            <%= f.owner.name %>
          </div>
        <% end %>



            <div class="rightCol-songname">
              <%= link_to f.name, f %>
            </div>

        </div>

        <%= link_to f do %>
          <div class="rightCol-Profile-Follow">
            View
          </div>
        <% end %>

      </div>
    <% end %>
  </div>
<% end %>

