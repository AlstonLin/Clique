<div class="rightCol-Filter">
  <div class="rightCol-Filter-Title">
    <div class="rightCol-Filter-Title-Name">
      <span aria-hidden="true" class="glyphicon glyphicon-heart"></span>
     	Top Artists
    </div>
  </div>
  <% @top.each do |t| %>
    <div class="rightCol-Filter-Profile">
      <%= link_to t do %>
        <div class="rightCol-Profile-Avi text-userPic">
          <%= image_tag t.profile_picture_url %>
        </div>
        <div class="rightCol-Profile-Bar">
          <div class="rightCol-Profile-Name">
            <%= t.name %>
          </div>
          <div class="rightCol-Followers">
            <i class="fa fa-user-plus"></i>
            <%= t.followers.count %>
          </div>
        </div>
      <% end %>
      <% if current_user %>
        <%= link_to user_follow_path(t), :remote => true, :method => :post do %>
          <div class="rightCol-Profile-Follow">
            <% if is_following t %>
              Unfollow
            <% else %>
              Follow
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
