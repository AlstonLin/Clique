<!-- Top Artists -->
<div class="panel panel-default m-b-md hidden-xs">
      <div class="panel-body">
        <h5 class="m-t-0">Top Artists  <small>· <%= link_to "See more", explore_path %></small></h5>
        <ul class="media-list media-list-stream">
          
          <% @top.each do |t| %>
          <li class="media m-b">
            <a class="media-left" href="#">
              <%= image_tag t.profile_picture_url , class: "media-object img-circle" %>
            </a>
            <div class="media-body">
              <strong><%= t.name %></strong> <%= t.followers.count %> Followers
              <div class="media-body-actions">
                <% if current_user %>
                    <%= link_to user_follow_path(t), :remote => true, :method => :post do %>
                    <% if is_following t %>
                      <button class="btn btn-primary-outline btn-sm">
                        <span class="icon icon-add-user"></span> Following
                      </button>
                    <% else %>
                    <button class="btn btn-primary-outline btn-sm">
                        <span class="icon icon-add-user"></span> Follow
                    </button>
                    <% end %>
                <% end %>
              </div>
            </div>
          </li>
          <% end %>
          <% end %>
        </ul>
      </div>
      <div class="panel-footer">
        © 2016 Cliq.fm About Help Terms Privacy Cookies Ads info Brand Blog Status
      </div>
</div>

<% if @favorites.count > 0 %>
  <div class="panel panel-default m-b-md hidden-xs">
        <div class="panel-body">
          <h5 class="m-t-0">Favorites  <small>· <%= link_to "See more", favorites_path, :id=>"FavSeeMore",:method => :get, :remote => true %></small></h5>
          <ul class="media-list media-list-stream">
            <% @favorites.each do |f| %>
            <li class="media m-b">
              <a class="media-left" href="#">
                <%= image_tag f.get_pic_url , class: "media-object img-circle" %>
              </a>
              <div class="media-body">
                <strong><%= link_to f.name, f %></strong><% end %> <%= f.owner.name %>
                <div class="media-body-actions">
                        <%= link_to f.name, f %>
                        <button class="btn btn-primary-outline btn-sm">
                          <span class="icon icon-add-user"></span> View
                        </button>
                </div>
              </div>
            </li>
          </ul>
        </div>
  </div>  
</div>
</div>
<% end %>
