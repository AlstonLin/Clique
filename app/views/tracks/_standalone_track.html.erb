<div class="player1">
  <div class="player1-Top">
    <div class="overlay"></div>
      <div class="player1-background">
    	 <%= image_tag @track.get_pic_url %>
      </div>
    <div class="player1-Picture">
      <%= image_tag @track.get_pic_url %>
    </div>
    <div class="player1-Genre">
      <%= time_ago_in_words @track.created_at %>
    </div>
  </div>

  <div class="player1-Section2">
    <div class="player1-Section2-Middle">
      <div class="player1-Name">
        <div class="player1-play">
          <div class="playa" song="<%=@track.song.url%>" image="<%= @track.pic.url%>" artist="<%= @track.owner.name%>" name="<%=@track.name%>" trackLink="<%=track_path(@track)%>" ownerLink="<%=user_path(@track.owner)%>">
            <div class="play-Btn">
              <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
            </div>
          </div>
        </div>
      </div>
      <div class="player1-left-btn">
        <div class="player1-artist">
          <%= link_to @track.owner.name, @track.owner %>
        </div>
        <div class="player1-songName">
          <%= link_to @track.name, @track %>
        </div>
      </div>

      <div class="player1-right-btn">
        <div class="player1-btn">
          <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
        </div>

        <% if current_user %>
  				<% if @track.owner == current_user %>
  					<!-- Buttons to show owner -->
            <div class="player1-btn2">
              <%= link_to "", track_delete_path(@track), :remote => true, :method => :post, :class => "glyphicon glyphicon-trash", data: { confirm: 'Are you certain you want to delete this?' } %>
            </div>
  			  <% elsif !@track.clique_only %>
  					<% if current_user.has_retracked? @track %>
  						<!-- Un-repost button -->
              <%= link_to track_repost_path(@track), :remote => true, :class => "player1-btn redclass", :method => :post do %>
                <div class="glyphicon glyphicon-refresh redclass"></div>
              <% end %>
  					<% else %>
  						<!-- Repost button -->
              <%= link_to track_repost_path(@track), :remote => true, :class => "player1-btn", :method => :post do %>
                <div class="glyphicon glyphicon-refresh"></div>
              <% end %>
  					<% end %>
				  <% end %>

					<% if @track.favoriters.include? current_user %>
            <!-- Unfavorite button -->
						<%= link_to track_favorite_path(@track), :remote => true, :class => "player1-btn redclass", :method => :post do %>
              <div class="glyphicon glyphicon-heart redclass"></div>
            <% end %>
					<% else %>
            <!-- Favorite button -->
						<%= link_to track_favorite_path(@track), :remote => true, :class => "player1-btn", :method => :post do %>
              <div class="glyphicon glyphicon-heart"></div>
            <% end %>
					<% end %>
        <% end %>

        <% if @track.downloadable %>
          <div class="player1-btn" onclick='myDownload("<%=@track.song.url%>","<%=@track.name%>")'>
            <span class="glyphicon glyphicon-save" aria-hidden="true"></span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
