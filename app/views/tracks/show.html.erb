<div class="page-Bottom2">
  <div class="centerCol">
    <div class="pin-show-title">
      <%= @track.name %>
    </div>
    <div id="pin_show">
      <div class="rightCol-singleSong">
        <div class="song-Description">
          <div class="rightCol-profileAvi">
            <img src="<%= @track.owner.profile_picture_url %>">
          </div>
          <div class="rightCol-profileName">
            <div class="profileName-Artist">
              <%= @track.owner.name %>
            </div>
            <% if current_user %>
              <% if is_following @user %>
                <%= button_to "Unfollow", user_unfollow_path(@track.owner), :remote => true, :class => "profilename-follow button btn btn-info btn-lg btn-primary btn"  %>
                  <% else %>
                    <%= button_to "Follow", user_follow_path(@track.owner), :remote => true, :class => "profilename-follow button btn btn-info btn-lg btn-primary btn"  %>
                      <% end %>
                        <% end %>
          </div>
          <div class="rightCol-Filter">
            <%= @track.owner.bio %>
          </div>
        </div>
      </div>
      <div class="leftCol">
        <%= render :partial => '/tracks/track', :locals => { :track => @track } %>


          <div class="player1-Bottom">
            <div class="user-avi1">
