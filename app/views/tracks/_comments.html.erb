<% track.comments.reverse_each do |c| %>
  <% if !c.removed %>
    <div class="text-Post">
      <a class="media-left" href="#">
        <img class="media-object img-circle img-size" src="<%= c.creator.profile_picture_url %>">
      </a>
      <div class="media-body">
        <div class="media-body-text">
          <div class="media-heading">
            <small class="pull-right text-muted">â€¢ <%= time_ago_in_words c.created_at %></small>
            <% if c.creator == current_user %>
              <%= button_to post_comment_delete_path(c), :remote => true, :class => "player1-btn2", data: { confirm: 'Are you certain you want to delete this?' } do %>
                <div class="glyphicon glyphicon-trash"></div>
              <% end %>
            <% end %>
            <h5><%= link_to c.creator.name, c.creator, :class => "modalClosable" %></h5>
          </div>
          <%= simple_format c.content %>
        </div>
      </div>
    </div>  
  <% end %>
<% end %>

