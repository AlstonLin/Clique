= simple_form_for @order, html: { multipart: true } do |f|
	- if @order.errors.any?
		#errors
			%h2
				= pluralize(@order.errors.count, "error")
				prevented this order from saving
			%ul
				- @order.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.hidden_field :pin_id, value: @pin.id

	.actions
		= f.submit "Buy Now", class: "btn btn-default btn-show-buy primary-background mh"
		= f.submit "Buy Now (#{number_to_currency(@pin.price)})", class: "btn btn-default btn-show-buy primary-background mv"