<% if current_user %>
  <div class="post-Comment">
    <div class="user-avi1">
      <%= link_to image_tag(current_user.profile_picture_url), current_user %>
    </div>
    <%= form_for Comment.new, :remote => true do |form| %>
      <%= form.hidden_field :commentable_id, :value => commentable.id %>
      <%= form.hidden_field :commentable_type, :value => commentable.class.name%>
      <%= form.text_area :content, :placeholder => "Comment", :class => "comment-field" %>
    <% end %>
  </div>
<% end %>
