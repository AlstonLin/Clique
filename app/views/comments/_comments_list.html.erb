<% commentable.comments.reverse_each do |c| %>
  <% if !c.removed %>
    <div class="text-Post">
      <%= link_to c.creator do %>
        <%= image_tag c.creator.profile_picture_url, :class => "media-object img-circle" %>
      <% end %>
      <div class="media-body">
        <div class="media-body-text">
          <div class="media-heading">
            <small class="pull-right text-muted">â€¢ <%= time_ago_in_words c.created_at %></small>
            <% if c.creator == current_user %>
                <%= button_to comment_delete_path(c), :remote => true, :class => "player1-btn2", data: { confirm: 'Are you certain you want to delete this?' } do %>
                  <div class="glyphicon glyphicon-trash"></div>
                <% end %>
            <% end %>
            <h5><%= link_to c.creator.name, c.creator, :class => "modalClosable" %></h5>
            </div>
          <%= simple_format show_mentions(c.content, c.mentions).html_safe %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
