.centerCol
	.pin-show-title
		%h1= @pin.name

	#pin_show
		.leftCol
			.panel.panel-default
				.panel-heading.pin_image
					= image_tag @pin.image.url
				.panel-footer.footer-show
					.row
						.col-md-6
							%p.user
								Submitted by
								= @pin.user.email
						.col-md-6
							.btn-group.pull-right
								= link_to "Order", new_order_path(pin_id: @pin.id), class: "btn btn-default"
								- if user_signed_in?
									= link_to "Edit", edit_pin_path, class: "btn btn-default"
									= link_to "Delete", pin_path, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default"
		.rightCol
			.rightCol-price
				= number_to_currency(@pin.price)
			= link_to "Buy Now", new_order_path(pin_id: @pin.id), class: "btn btn-default btn-show-buy primary-background"
			.rightCol-description
				%p.description= simple_format(@pin.description)