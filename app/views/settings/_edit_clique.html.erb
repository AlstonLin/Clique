<div class="panel-heading">
  <h2>Edit Clique</h2>
  <div class="row" style="overflow: auto;">
    <%= button_to "Edit Clique", edit_clique_path, :remote => true, :method => :get %>
    <%= button_to "Clique Members", clique_members_path, :remote => true, :method => :get %>
    <%= button_to "Clique Orders", clique_orders_path, :remote => true, :method => :get %>
  </div>
</div>
<div class="panel-body">
  <%= form_for clique, :remote => true do |f| %>
    <%= f.label :name, "Clique Name (Optional) " %>
    <%= f.text_field :name %><br>
    <%= f.label :price, "Monthly Subscription Price " %>
    $<%= f.number_field :price, :step => 0.01 %><br>
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols => '50', :rows => '5' %><br>
    <%= f.label :thank_you_message, "Thank You Message (Optional)" %><br>
    <%= f.text_area :thank_you_message, :cols => '50', :rows => '5' %><br>
    <%= f.submit "Update Clique" %>
  <% end %>
</div>
